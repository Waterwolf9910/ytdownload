{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Main",
            "runtimeExecutable": "${workspaceFolder}/.yarn/unplugged/electron-npm-27.0.2-57dad1d80f/node_modules/electron/dist/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/.yarn/unplugged/electron-npm-27.0.2-57dad1d80f/node_modules/electron/dist/electron.exe"
            },
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "--remote-debugging-port=9222",
                "."
            ],
            "preLaunchTask": "npm: prepareDebug",
            "outputCapture": "std",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/.yarn/**",
                "${workspaceFolder}/.pnp.cjs",
                "${workspaceFolder}/.pnp.loader.mjs",
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "serverReadyAction":{
                "action": "startDebugging",
                "name": "Renderer",
                "pattern": "webpack [0-9.]+ compiled successfully",
                "killOnServerStop": false
            },
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true,
        },
        {
            "name": "Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/static_src"
        }
    ]
}
